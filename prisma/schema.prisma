generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id          Int      @id @default(autoincrement())
  description String
  title       String   @unique
  imgUrl      String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
  card Card[]
}
